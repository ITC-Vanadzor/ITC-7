#include <iostream>

int main() {
int N;
int K;
std::cout << "N=";
std::cin >> N;
std::cout << "K=";
std::cin >> K;

while (K>0)
{
        int sum = N;
	int dif = 3;
	int step = 2;
	sum = sum + N * step - dif;
--K;
dif+=2;
}   
/*for (int i=0; i<K; ++i) {
